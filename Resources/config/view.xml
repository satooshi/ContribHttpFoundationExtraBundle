<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="contrib_http_foundation_extra.view.listener.class">Contrib\HttpFoundationExtraBundle\EventListener\FileListener</parameter>
    </parameters>

    <services>
        <service id="contrib_http_foundation_extra.view.listener" class="%contrib_http_foundation_extra.view.listener.class%">
            <tag name="kernel.event_listener" event="kernel.view" method="onKernelView" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
